<%= form_with(model: upload, html: { class: "contents", enctype: "multipart/form-data", data: {turbo: "false", "upload-target": "form"}}) do |form| %>
  <div class="my-5">
    <%= form.file_field :file, data: { "upload-target": "file" }, required: true, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": upload.errors[:new].none?, "border-red-400 focus:outline-red-600": upload.errors[:new].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer", data: { action: "click->upload#upload" }, value: "#{t 'uploads.buttons.submit'}" %>
  </div>
<% end %>
